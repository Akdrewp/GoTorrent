{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file", // This label matches the "preLaunchTask" in launch.json
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g", // <-- The all-important debug flag
        "${file}", // The active file (e.g., main.cpp)
        "-o", // The output flag
        "${fileDirname}/${fileBasenameNoExtension}" // The output file (e.g., ./hello_world)
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    }
  ]
}
