{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Client (make)",
      "type": "shell",
      // This now just runs "make"
      "command": "make",
      "args": [
        // This now matches the "client" target in the new Makefile
        "client"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Builds the main bittorrent_client executable using the Makefile",
      "options": {
        "cwd": "${workspaceFolder}",
      }
    },
    {
      "label": "Build Tests (make)",
      "type": "shell",
      // This is the new task that your launch.json needs
      "command": "make",
      "args": [
        // This matches the "tests" target in the new Makefile
        "tests"
      ],
      "group": "build",
      "problemMatcher": [
        "$gcc"
      ],
      "detail": "Builds the run_tests executable",
      "options": {
        "cwd": "${workspaceFolder}",
      }
    },
    {
      "label": "Run Tests (make)",
      "type": "shell",
      // This runs "make run_tests"
      "command": "make",
      "args": [
        // This matches the "run_tests" target
        "run_tests"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "problemMatcher": [],
      "detail": "Builds and runs the GTest executable",
      "options": {
        "cwd": "${fileDirname}",
      }
    }
  ]
}

